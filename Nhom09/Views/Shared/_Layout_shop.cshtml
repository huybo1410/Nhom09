                                </ul>
                            </div>

                            <div class="col-lg-5 pr-0">
                                <ul class="nav navbar-nav navbar-right right_nav pull-right">
                                    <li class="nav-item">
                                        <form asp-area="" asp-controller="Products" asp-action="Search">
                                            <p>
                                                <input type="text" name="SearchString" />
                                                <input type="submit" value="Tìm Kiếm" />
                                            </p>
                                        </form>
                                    </li>

                                    <li class="nav-item">
                                    
                                        <a asp-area="" asp-controller="Carts" asp-action="Index" class="icons">
                                            <i class="ti-shopping-cart"></i>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a asp-controller="Login" class="icons">
                                            <i class="ti-user" aria-hidden="true"></i>
                                        </a>
                                    </li>


                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
