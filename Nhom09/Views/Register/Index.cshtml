@model Nhom09.Models.Customer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_shop.cshtml";
}

<div class="card-header">
    <h3>
        Đăng ký
    </h3>
</div>
<div class="card-body">
    @using(Html.BeginForm("Index","Register",FormMethod.Post)){

        if(ViewBag.Status != null){
            if (ViewBag.Status == 1)
            {
                <span class="alert alert-success">Đăng ký thành công</span>
                <br />

                <br />
            }
            else if (ViewBag.Status == 0){
                <span class="alert alert-success">Lỗi !!!!</span>
                <br />

                <br />
            }
        }


        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"> </i></span>
            </div>
            @Html.TextBoxFor(m => m.Username,new {@class ="form-control",@placeholder="Tài khoản"})
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"> </i></span>
            </div>
            @Html.PasswordFor(m => m.Password,new {@class ="form-control",@placeholder="Mật khẩu"})
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"> </i></span>
            </div>
            @Html.TextBoxFor(m => m.FullName,new {@class ="form-control",@placeholder="Họ tên"})
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"> </i></span>
            </div>
            @Html.TextBoxFor(m => m.Address,new {@class ="form-control",@placeholder="Địa Chỉ"})
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
            </div>
            <select name="Sex" class="form-control">
                <option value="0">Nam</option>
                <option value="1">Nữ</option>
            </select>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"> </i></span>
            </div>
            @Html.TextBoxFor(m => m.Phone,new {@class ="form-control",@placeholder="Số điện thoại"})
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn float-right login_btn" />
        </div>
    }




</div>


