@model IEnumerable<Nhom09.Models.Product>
<section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="col-lg-12">
                    <p class="sub text-uppercase">Shop Sam Sung</p>
                    <h3><span>Siêu</span> ưu <br />đãi <span>đến</span>13<br /><span>triệu</span></h3>
                    <h4>Liên hệ mục chat để nhận ưu đãi độc quyền</h4>
                    <a class="main_btn mt-40" asp-area="" asp-controller="Contacts" asp-action="Index">Liên hệ ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="feature-area section_gap_bottom_custom">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-money"></i>
                        <h3>Đảm bảo hoàn tiền</h3>
                    </a>
                    <p>Đối với sản phẩm lỗi</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-truck"></i>
                        <h3>Miễn phí vận chuyển</h3>
                    </a>
                    <p>Đối với địa chỉ giao cách cửa hàng 5km</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-support"></i>
                        <h3>Luôn luôn hỗ trợ</h3>
                    </a>
                    <p>Giải đáp các thắc mắc của khác hàng kịp thời</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-blockchain"></i>
                        <h3>Thanh toán an toàn</h3>
                    </a>
                    <p>Hỗ trợ thanh toán qua ngân hàng, ví điện tử, tiền mặt</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="feature_product_area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Sản phẩm ưu đãi</span></h2>
                    <p>Siêu giảm giá - Ưu đãi có hạn</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="img-fluid w-100" src="~/img/ImageSP/@item.Image" alt="" />
                            <div class="p_icon">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <i class="ti-eye"></i>
                                </a>
                                <a href="#">
                                    <i class="ti-heart"></i>
                                </a>
                                <a href="#">
                                    <i class="ti-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4>@item.Name</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">@Html.DisplayFor(model =>item.Price)</span>

                                <del>@(String.Format("{0:n0} đ", (item.Price + 1000000)))</del>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>


<section class="offer_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="offset-lg-4 col-lg-6 text-center">
                <div class="offer_content">
                    @*<h3 class="text-uppercase mb-40">Ưu đãi có hạn</h3>*@
                    @*<h2 class="text-uppercase">Giảm đến 50%</h2>*@
                    <a href="#" class="main_btn mb-20 mt-5">Khám phá ngay</a>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="new_product_area section_gap_top section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Sản phẩm mới</span></h2>
                    <p>Với những sản phẩm vừa mới ra mắt của Sam Sung</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="img-fluid w-100" src="~/img/ImageSP/@item.Image" alt="" />
                            <div class="p_icon">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <i class="ti-eye"></i>
                                </a>
                                <a href="#">
                                    <i class="ti-heart"></i>
                                </a>
                                <a href="#">
                                    <i class="ti-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4>@item.Name</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">@Html.DisplayFor(model =>item.Price)</span>



                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>