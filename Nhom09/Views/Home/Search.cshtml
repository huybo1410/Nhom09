@model IEnumerable<Nhom09.Models.Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap"
          rel="stylesheet" />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/css/search.css" />
</head>
<body>
    <div class="wrapper">
       
        
        <div id="search-container">
             <form asp-area="" asp-controller="Home" asp-action="Searchs">
                <input type="text" name="SearchString"
                   id="search-input"
                   placeholder="Nhập tên sản phẩm ở đây.." />
                <button type="submit" id="search">Tìm</button>
                @*<input type="text" name="SearchString" />
                <input type="submit" value="Tìm Kiếm" />*@
            </form>
        </div>
        <div id="buttons">
            <div class="inline-buttons">
                <a class="button-27 first button"  asp-action="AllProduct">Tất cả</a>
                @foreach (var item in ViewBag.lsProductType)
                {

                    <a asp-action="Search" asp-route-id="@item.Id" class="button-28 first button">@item.Name</a>



                }
            </div>
        </div>
        <div id="products">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-product">
                            <div class="product-img">
                                <img class="img-fluid w-100" src="~/img/ImageSP/@item.Image" alt="" />
                                <div class="p_icon">
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <i class="ti-eye"></i>
                                    </a>
                                    <a href="#">
                                        <i class="ti-heart"></i>
                                    </a>
                                    <a href="#">
                                        <i class="ti-shopping-cart"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="product-btm">
                                <a href="#" class="d-block">
                                    <h4>@item.Name</h4>
                                </a>
                                <div class="mt-3">
                                    <span class="mr-4">@Html.DisplayFor(model =>item.Price)</span>



                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</body>
</html>